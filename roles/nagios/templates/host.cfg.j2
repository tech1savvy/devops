define host {
  use             linux-server
  host_name       {{ host_name }}
  address         {{ address }}
  max_check_attempts 5
  check_period    24x7
  notification_interval 30
  notification_period 24x7
}

define service {

    use                     local-service           ; Name of service template to use
    host_name               {{ host_name }}
    service_description     PING
    check_command           check_ping!100.0,20%!500.0,60%
}


